        flex-direction: column;
    }

    .episodes-list {
        max-width: 100%;
    }

    .hero-title {
        font-size: 32px;
    }

    .row {
        padding: 20px;
    }

    .poster {
        width: 120px;
        height: 180px;
    }

    .search-container {
        padding: 80px 20px 20px 20px;
    }

    #search-input {
        font-size: 18px;
        padding: 15px 20px;
    }

    .details-page {
        padding-top: 80px;
    }

    .details-layout {
        padding: 0 20px;
    }

    .details-title {
        font-size: 32px;
    }

    .details-actions {
