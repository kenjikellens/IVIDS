/* Responsive Design Media Queries */

/* Tablet and smaller desktops */
@media (max-width: 1200px) {
    .row-posters {
        gap: 10px;
    }

    .poster {
        width: 160px;
        height: 240px;
    }

    .details-layout {
        padding: 0 40px;
    }
}

