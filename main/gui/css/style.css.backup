/* gui/css/style.css */

.btn-primary {
    background-color: #fff;
    color: black;
    font-weight: bold;
}

.btn-primary:hover {
    background-color: #c0c0c0;
}

.btn-secondary {
    background-color: rgba(109, 109, 110, 0.7);
    color: white;
    position: relative;
    z-index: 20;
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
}

.btn-secondary:hover {
    background-color: rgba(109, 109, 110, 0.9);
}

.btn.focused,
.btn:focus {
    border-color: var(--focus-border-color);
    transform: scale(1.05);
    outline: none;
    box-shadow: 0 0 0 3px var(--primary-color);
}

/* Rows */
.row {
    padding: 20px 50px;
    position: relative;
    z-index: 20;
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
}

.row-title {
    font-size: 24px;
    margin-bottom: 15px;
    font-weight: bold;
    color: #e5e5e5;
}

.row-container {
    position: relative;
    display: flex;
    align-items: center;
}

.row-posters {
    display: flex;
    gap: 15px;
    overflow-x: auto;
    padding: 20px 0;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
}

.row-posters::-webkit-scrollbar {
    display: none;
}

.handle {
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    font-size: 3rem;
    cursor: pointer;
    padding: 0 10px;
    z-index: 50;
    height: 100%;
    position: absolute;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s, background-color 0.3s;
    border-radius: 4px;
}

.row-container:hover .handle {
    opacity: 1;
}

.handle:hover {
    background-color: rgba(0, 0, 0, 0.8);
    transform: scale(1.1);
}

.handle-left {
    left: -40px;
}

.handle-right {
    right: -40px;
}

.poster {
    width: 200px;
    height: 300px;
    object-fit: cover;
    border-radius: 4px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 3px solid transparent;
    flex-shrink: 0;
    cursor: pointer;
}

.poster:hover,
.poster.focused,
.poster:focus {
    transform: scale(1.1);
    z-index: 100;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 4px var(--primary-color), 0 10px 20px rgba(0, 0, 0, 0.8);
    outline: none;
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.row:nth-child(1) {
    animation-delay: 0.1s;
}

.row:nth-child(2) {
    animation-delay: 0.2s;
}

.row:nth-child(3) {
    animation-delay: 0.3s;
}

.row:nth-child(4) {
    animation-delay: 0.4s;
}

.row:nth-child(5) {
    animation-delay: 0.5s;
}

/* Search Page Styling */
.search-container {
    padding: 120px 60px 60px 60px;
    min-height: 100vh;
    background: radial-gradient(circle at top center, rgba(var(--primary-rgb), 0.15), transparent 60%);
    animation: fadeIn 0.6s ease-out;
}

.search-box {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
    margin-bottom: 60px;
    position: relative;
    z-index: 100;
}

#search-input {
    width: 100%;
    max-width: 600px;
    padding: 20px 30px;
    font-size: 24px;
    background: rgba(0, 0, 0, 0.6);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    color: #fff;
    backdrop-filter: blur(12px);
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

#search-input:focus,
#search-input.focused {
    outline: none;
    border-color: var(--primary-color);
    background: rgba(0, 0, 0, 0.8);
    box-shadow: 0 0 30px rgba(var(--primary-rgb), 0.25), 0 10px 30px rgba(0, 0, 0, 0.5);
    transform: translateY(-2px);
}

#search-btn {
    padding: 20px 40px;
    font-size: 20px;
    font-weight: 600;
    background: var(--primary-color);
    color: #000;
    border: none;
    border-radius: 16px;
    cursor: pointer;
    transition: all 0.3s ease;
    grid-column: 1 / -1;
    text-align: center;
    margin-top: 50px;
}

/* Player */
.video-container {
    width: 100%;
    height: 100%;
    background: black;
}

iframe {
    width: 100%;
    height: 100%;
    border: none;
}

/* Episodes List */
.episodes-list {
    margin-top: 40px;
    margin-bottom: 40px;
    width: 100%;
    max-width: 900px;
    flex: 1;
    min-width: 0;
}

.episodes-title {
    font-size: 28px;
    margin-bottom: 20px;
    color: #fff;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 10px;
}

.episode-item {
    display: flex;
    gap: 20px;
    padding: 15px;
    margin-bottom: 15px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    border: 2px solid transparent;
}

.episode-item:hover,
.episode-item.focused {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(1.01);
    border-color: var(--primary-color);
}

.episode-image {
    width: 200px;
    height: 112px;
    /* 16:9 aspect ratio */
    background-size: cover;
    background-position: center;
    border-radius: 4px;
    flex-shrink: 0;
    background-color: #000;
}

.episode-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.episode-header {
    display: flex;
    align-items: baseline;
    gap: 10px;
    margin-bottom: 8px;
}

.episode-number {
    font-size: 20px;
    font-weight: bold;
    color: var(--primary-color);
}

.episode-name {
    font-size: 20px;
    font-weight: bold;
    color: #fff;
}

.episode-overview {
    font-size: 14px;
    color: #aaa;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

/* Details Page New Layout */
.details-page {
    min-height: 100vh;
    height: auto;
    background-size: 100% auto;
    background-repeat: no-repeat;
    background-position: top center;
    position: relative;
    padding-top: 100px;
    /* Navbar space */
    padding-bottom: 50px;
}

/* Background Fade Effect (Hero Style) */
.details-page::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 60vw;
    max-height: 100vh;
    background: linear-gradient(to bottom, rgba(20, 20, 20, 0) 40%, var(--background-color) 90%);
    z-index: 1;
    pointer-events: none;
}

/* Dark overlay for readability */
.details-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    /* General darkening */
    z-index: 0;
}

.details-layout {
    position: relative;
    z-index: 10;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 60px;
    display: flex;
    flex-direction: column;
    gap: 40px;
}

.details-top {
    display: flex;
    gap: 60px;
    align-items: flex-start;
}

.details-info {
    flex: 1;
    max-width: 800px;
}

.details-title {
    font-size: 50px;
    margin-bottom: 20px;
    font-weight: bold;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

.details-meta {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
    color: #aaa;
    font-size: 18px;
}

.date-box {
    background: var(--primary-color);
    color: #000;
    padding: 4px 10px;
    border-radius: 4px;
    font-weight: bold;
    font-size: 16px;
}

.details-genres {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 20px;
}

.genre-chip {
    background: rgba(255, 255, 255, 0.1);
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 14px;
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.details-overview {
    font-size: 18px;
    line-height: 1.6;
    color: #ddd;
    margin-bottom: 30px;
}

.details-actions {
    display: flex;
    gap: 20px;
}

/* Seasons List Sidebar */
.details-seasons {
    width: 250px;
    flex-shrink: 0;
    background: rgba(0, 0, 0, 0.3);
    padding: 20px;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    max-height: 600px;
    overflow-y: auto;
}

.seasons-header {
    font-size: 24px;
    margin-bottom: 15px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 10px;
}

.seasons-list-content {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.season-btn {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #ccc;
    padding: 12px 15px;
    text-align: left;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
    font-size: 16px;
}

.season-btn:hover,
.season-btn.focused {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--primary-color);
    color: #fff;
    transform: translateX(5px);
}

.season-btn.active {
    background: var(--primary-color);
    color: #000;
    border-color: var(--primary-color);
    font-weight: bold;
}

/* Bottom Section (Episodes) */
.details-bottom {
    width: 100%;
    display: flex;
    flex-direction: row;
    gap: 30px;
    align-items: flex-start;
    max-width: 1400px;
    margin: 0 auto;
}

/* Hero Section */
.hero {
    height: 85vh;
