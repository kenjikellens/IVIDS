    padding-top: 0;
}

.hero-title {
    font-size: 60px;
    margin-bottom: 20px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
}

.hero-desc {
    font-size: 20px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #ccc;
    padding: 12px 15px;
    text-align: left;
